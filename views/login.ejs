<!DOCTYPE HTML>
<html>

<head>
  <link rel="stylesheet" href="css/reg.css">
  <title> Log in </title>
  <link rel="shortcut icon" href="img/icon.png" type="image/png">
</head>

<body>

  <%- include('layouts/navbar'); -%>

  <div class="regcontainer">

    <h1>Sign in</h1>

    <form method="POST" action="/login/action" id="login" class="input">
      <input name="username" id="usernamelog" type="text" class="inputfield" placeholder="Username" required>
      <input name="password" id="passwordlog" type="text" class="inputfield" placeholder="Password" required>
      <button class="submit" type="submit">Let me in!</button>
    </form>

    <div class="warning">
      <% if(errors != null && errors.length > 0){ %>
      <div class="alert alert-danger" role="alert">
        <% for (var i = 0; i < errors.length;i++){ %>
        <a class="alert-link"> <%= errors[i] %> </a>
        <% } %>
      </div>
      <% } %>

      <% if(errors.length == 0){ %>
      <div class="alert alert-success" role="alert">
      </div>
      <% } %>
    </div>

  </div>

</body>

</html>